{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist/client" }
        },
        { "src": "server.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/", "dest": "server.js" },
        { "src": "/(.*)\\.html", "dest": "server.js" },
        { "handle": "filesystem" },
        { "src": "/(.*)", "dest": "server.js" }
    ]
}